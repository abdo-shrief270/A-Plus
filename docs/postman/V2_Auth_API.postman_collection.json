{
    "info": {
        "_postman_id": "v2-auth-collection",
        "name": "APlus V2 Auth API",
        "description": "V2 Authentication API endpoints for APlus application",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api/v2",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "otp_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "device_id",
            "value": "postman-device-001",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "1. Check Username Availability",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_name\": \"test_user\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/username/check",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "username",
                                "check"
                            ]
                        },
                        "description": "Check if a username is available for registration."
                    },
                    "response": []
                },
                {
                    "name": "2. Register Student",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('token', jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Device-ID",
                                "value": "{{device_id}}"
                            },
                            {
                                "key": "X-Device-Platform",
                                "value": "Postman"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"طالب تجريبي\",\n    \"user_name\": \"student_test_001\",\n    \"email\": \"student@example.com\",\n    \"country_code\": \"+20\",\n    \"phone\": \"1234567890\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"gender\": \"male\",\n    \"exam_id\": 1,\n    \"exam_date\": \"2026-06-01\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register/student",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register",
                                "student"
                            ]
                        },
                        "description": "Register a new student account."
                    },
                    "response": []
                },
                {
                    "name": "2. Register Parent",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('token', jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Device-ID",
                                "value": "{{device_id}}"
                            },
                            {
                                "key": "X-Device-Platform",
                                "value": "Postman"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"ولي أمر تجريبي\",\n    \"user_name\": \"parent_test_001\",\n    \"email\": \"parent@example.com\",\n    \"country_code\": \"+20\",\n    \"phone\": \"0987654321\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"gender\": \"male\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register/parent",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register",
                                "parent"
                            ]
                        },
                        "description": "Register a new parent account."
                    },
                    "response": []
                },
                {
                    "name": "3. Login Check (Step 1)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_name\": \"student_test_001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login/check",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login",
                                "check"
                            ]
                        },
                        "description": "Check if user exists and if 2FA is enabled. Returns masked phone/email if 2FA is enabled."
                    },
                    "response": []
                },
                {
                    "name": "4. Login (Password - No 2FA)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('token', jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Device-ID",
                                "value": "{{device_id}}"
                            },
                            {
                                "key": "X-Device-Platform",
                                "value": "Postman"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_name\": \"student_test_001\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with username and password. Returns JWT token on success."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "OTP & Password Reset",
            "item": [
                {
                    "name": "1. Initiate Password Reset",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_name\": \"student_test_001\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/password/reset",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "password",
                                "reset"
                            ]
                        },
                        "description": "Find user and return masked contact options (phone/email)."
                    },
                    "response": []
                },
                {
                    "name": "2. Send OTP",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.data && jsonData.data.token) {",
                                    "    pm.collectionVariables.set('otp_token', jsonData.data.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_name\": \"student_test_001\",\n    \"method\": \"phone\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/otp/send",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "otp",
                                "send"
                            ]
                        },
                        "description": "Send OTP via chosen method (phone, email, or whatsapp). Rate limited: 3/min."
                    },
                    "response": []
                },
                {
                    "name": "3. Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Device-ID",
                                "value": "{{device_id}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"token\": \"{{otp_token}}\",\n    \"otp\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/otp/verify",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "otp",
                                "verify"
                            ]
                        },
                        "description": "Verify OTP code. Rate limited: 5/min. Check Laravel log for actual OTP in dev mode."
                    },
                    "response": []
                },
                {
                    "name": "4. Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"token\": \"{{otp_token}}\",\n    \"password\": \"newpassword123\",\n    \"password_confirmation\": \"newpassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/password/change",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "password",
                                "change"
                            ]
                        },
                        "description": "Change password after OTP verification."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Profile & Devices",
            "item": [
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        },
                        "description": "Get current authenticated user data with devices list."
                    },
                    "response": []
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"اسم جديد\",\n    \"email\": \"newemail@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "profile"
                            ]
                        },
                        "description": "Update user profile. Supports name, email, phone, gender, exam_id, exam_date, and password change."
                    },
                    "response": []
                },
                {
                    "name": "List Devices",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/devices",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "devices"
                            ]
                        },
                        "description": "Get list of all registered devices for the current user."
                    },
                    "response": []
                },
                {
                    "name": "Revoke Device",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/devices/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "devices",
                                "1"
                            ]
                        },
                        "description": "Delete/revoke a device by ID."
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Logout and invalidate the JWT token."
                    },
                    "response": []
                }
            ]
        }
    ]
}